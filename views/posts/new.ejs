<% if(!user){ %>
  <div>
    <h1>Please login or sign up</h1>
  </div>
    <div class="d-grid gap-2">
      <a class="btn btn-primary" href="/users/login" role="button" 
      style="--bs-btn-padding-y: 2rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: 2rem;">
      Login</a>
      <a class="btn btn-primary" href="/users/new" role="button"
      style="--bs-btn-padding-y: 2rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: 2rem;">
      Signup</a>
    </div>
<% } else { %>
 
  <h1 class="mt-2">Create a new post</h1>

<form action="/posts" method="POST">
  <div class="form-group mt-3">
    <label for="name">Name: </label>
    <input type="text" class="form-control nes-input" id="name" name="name" required>
  </div>

  <div class="form-group nes-select mt-3">
    <label for="race">Race: </label>
    <select name="race" id="race" class="form-control" required>
      <option value="" disabled selected hidden>Select...</option>
      <% for(let i = 0; i<races.length; i++) { %>
        <option value="<%= races[i].name %>"><%= races[i].name %></option>
      <% } %>
    </select>
  </div>

  <div class="form-group nes-select mt-3">
    <label for="class">Class: </label>
    <select name="class" id="class" class="form-control" required>
      <option value="" disabled selected hidden>Select...</option>
      <% for(let i = 0; i<classes.length; i++) { %>
        <option value="<%= classes[i].name %>"><%= classes[i].name %></option>
      <% } %>
    </select>
  </div>
  
  <div class="form-group mt-3">
    <label for="content">Content</label>
    <textarea type="text" class="form-control nes-textarea" id="content" name="content" required></textarea>
  </div>
  
  <div class="form-group">
    <label for="user"></label>
    <input hidden value="<%= user.id %>" name="userId">
  </div>
  <input type="submit" class="nes-btn is-primary">
</form>

<% } %>